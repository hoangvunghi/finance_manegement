<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:id="@+id/transactionDetail"
    android:background="@color/white">

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin giao dịch"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp" />

    <!-- Amount -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Số tiền:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" />
        <EditText
            android:id="@+id/etAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập số tiền"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Description -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Mô tả:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" />
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập mô tả"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Transaction Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày giao dịch:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" />
        <EditText
            android:id="@+id/etTransactionDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Chọn ngày"
            android:focusable="false"
            android:clickable="true"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Category Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Danh mục:"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" />
        <EditText
            android:id="@+id/etCategoryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Nhập tên danh mục"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Category Type Name -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Loại danh mục:"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-medium" />
        <EditText
            android:id="@+id/etCategoryTypeName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:focusable="false"
            android:hint="Nhập loại danh mục"
            android:textSize="16sp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:fontFamily="sans-serif" />
    </LinearLayout>

    <!-- Nút Lưu -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSaveTransaction"
        android:text="Lưu giao dịch"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Nút Xóa -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDeleteTransaction"
        android:text="Xóa giao dịch"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="8dp" />

    <!-- Nút Hủy bỏ -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancelTransaction"
        android:text="Hủy bỏ"
        android:backgroundTint="@color/primary_color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium" />
</LinearLayout>